<?xml version="1.0" encoding="utf-8"?>
 <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="@drawable/homebg">


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/linearLayout"
        android:layout_centerInParent="true"
        android:contentDescription="NULL"
        android:fillViewport="true"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="250dp"
                android:layout_height="154dp"
                android:layout_marginStart="72dp"
                android:layout_marginTop="29dp"
                android:layout_marginEnd="71dp"
                android:layout_marginBottom="11dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Welcome to the No Judgement Zone"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textColor="@color/design_default_color_surface"
                android:textSize="40sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toTopOf="@+id/imageView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="263dp"
                android:layout_height="154dp"
                android:layout_marginStart="65dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="65dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toTopOf="@+id/textView5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:srcCompat="@drawable/image1" />

            <Button
                android:id="@+id/button"
                android:layout_width="256dp"
                android:layout_height="47dp"
                android:layout_marginStart="68dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="69dp"
                android:layout_marginBottom="14dp"
                android:text="JOIN NOW"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toTopOf="@+id/imageView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                app:strokeColor="#FFFFFF"
                app:strokeWidth="3dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="263dp"
                android:layout_height="28dp"
                android:layout_marginStart="65dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="65dp"
                android:layout_marginBottom="11dp"
                android:text="Join Planet Fitness Today"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="254dp"
                android:layout_height="147dp"
                android:layout_marginStart="69dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="70dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toTopOf="@+id/button2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button"
                app:srcCompat="@drawable/image2" />

            <Button
                android:id="@+id/button2"
                android:layout_width="254dp"
                android:layout_height="56dp"
                android:layout_marginStart="69dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="70dp"
                android:layout_marginBottom="10dp"
                android:drawableRight="@drawable/baseline_chevron_right_24"
                android:drawablePadding="20dp"
                android:text="Enjoy a FREE day at the gym on us!"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toTopOf="@+id/imageView8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3"
                app:strokeColor="#FFFFFF"
                app:strokeWidth="3dp" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="235dp"
                android:layout_height="178dp"
                android:layout_marginStart="79dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="79dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/button4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button2"
                app:srcCompat="@drawable/dumbell" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="124dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="124dp"
                android:layout_marginBottom="80dp"
                android:text="Rate Our App"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toTopOf="@+id/button5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView8"
                app:strokeColor="#FFFFFF"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="148dp"
                android:layout_marginEnd="149dp"
                android:text="Button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button4" />

            <ImageButton
                android:id="@+id/logoutbox"
                android:layout_width="257dp"
                android:layout_height="259dp"
                android:layout_marginTop="-90dp"
                android:layout_marginEnd="320dp"
                android:layout_marginBottom="520dp"
                android:background="@android:color/transparent"
                android:scaleX=".15"
                android:scaleY=".15"
                app:layout_constraintBottom_toTopOf="@+id/button2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logg" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="392dp"
            android:layout_height="103dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="680dp"
            android:layout_marginEnd="1dp"
            android:background="#ffff00"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/homebtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="30dp"
                android:background="@null"
                android:src="@drawable/home" />

            <ImageButton
                android:id="@+id/tutorialbtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="30dp"
                android:background="@null"
                android:src="@drawable/tutorial" />

            <ImageButton
                android:id="@+id/lockedbtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="30dp"
                android:background="@null"
                android:src="@drawable/secure" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>