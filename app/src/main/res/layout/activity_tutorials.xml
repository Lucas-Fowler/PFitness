<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homebg"
    tools:context=".Tutorials">


    <ImageButton
        android:id="@+id/logoutbox2"
        android:layout_width="257dp"
        android:layout_height="259dp"
        android:layout_marginEnd="330dp"
        android:layout_marginBottom="280dp"
        android:background="@android:color/transparent"
        android:scaleX=".15"
        android:scaleY=".15"
        app:layout_constraintBottom_toBottomOf="@+id/web"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logg" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="313dp"
        android:layout_height="105dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="669dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Planet Fitness Experience"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textColor="@color/design_default_color_surface"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <WebView
        android:id="@+id/web"
        android:layout_width="310dp"
        android:layout_height="223dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintBottom_toTopOf="@+id/video"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <VideoView
        android:id="@+id/video"
        android:layout_width="317dp"
        android:layout_height="218dp"
        android:layout_gravity="center_vertical|center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/web" />


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="392dp"
        android:layout_height="103dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="562dp"
        android:layout_marginBottom="1dp"
        android:background="#ffff00"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">


        <ImageButton
            android:id="@+id/homebtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="30dp"
            android:background="@null"
            android:src="@drawable/home" />

        <ImageButton
            android:id="@+id/tutorialbtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="30dp"
            android:background="@null"
            android:src="@drawable/tutorial" />

        <ImageButton
            android:id="@+id/lockedbtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="30dp"
            android:background="@null"
            android:src="@drawable/secure" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
